<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h4>Detail Contact</h4>
            <% if (!contact) { %>
                <div class="alert alert-danger fw-bold" role="alert">
                    Data contact tidak ada. <br>
                    
                    <a href="/contact" class="alert-link fw-normal">&laquo; Back to contact</a>
                </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title"><%= contact.nama %> </h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= contact.noHp %> </h6>
                  <p class="card-text"><%= contact.email %> </p>
 
                  <a href="/contact/edit/<%= contact.nama %>" class="btn btn-info badge"">Edit</a>
                  
                  <!-- <a href="/contact/delete/<%= contact.nama %>" class="btn btn-danger badge" onclick="return confirm('Yakin mau dihapus?')">Delete</a> -->

                  <form action="/contact?_method=DELETE" method="POST" class="d-inline">
                      <input type="hidden" name="nama" value="<%= contact.nama %>">
                    <button type="submit" class="btn btn-danger badge" onclick="return confirm('Yakin mau hapus?')">Delete</button>
                  </form>

                  <a href="/contact" class="card-link d-block mt-3">&laquo; Back</a>
                </div>
            </div>
            <% } %> 
        </div>
    </div>
</div>